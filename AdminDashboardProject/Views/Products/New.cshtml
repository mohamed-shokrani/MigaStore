@using SharedProject.ViewModels.Prodcuts
@model ProductViewModel;
<form asp-action="New" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <strong asp-validation-for="product.Name" class="text-danger"></strong>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId"></label>
    <select asp-for="CategoryId" class="form-control" asp-items='new SelectList(Model.Categories, "Id", "Name")'>
    <option value="">Select Category</option>
    </select>
   
    </div>
    <div  class="form-group">
        <label asp-for="BrandId"></label>
        <select asp-for="BrandId" asp-items='new SelectList(Model.Brands,"Id","Name")' class="form-control">
            <option value="">Select Brand</option>

        </select>
    </div>
    <div class="form-group">
        <label asp-for="SellerId"></label>
        <select asp-for="SellerId" class="form-control" asp-items='new SelectList(Model.Sellers,"Id","Name")'>
            <option value="">Select Seller</option>

        </select>

    </div>
</form>